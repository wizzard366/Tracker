= form_for @proyect do |f|
  -if @proyect.errors.any?
    #error_explanation
      %h2= "#{pluralize(@proyect.errors.count, "error")} prohibited this proyect from being saved:"
      %ul
        - @proyect.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :begin_date
    = f.datetime_select :begin_date
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :status_id
    = f.number_field :status_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :protect_bit
    = f.number_field :protect_bit
  .actions
    = f.submit 'Save'
